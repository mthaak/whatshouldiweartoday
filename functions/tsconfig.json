{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": ".",
    "rootDir": ".."
  },
  "compileOnSave": true,
  "include": ["src/**/*", "../shared/src/**/*"],
  "exclude": ["node_modules", "build"]
}
